{% schema %}
{
  "name": "SNS - Hero Splash",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading_sugar",
      "label": "Left Heading",
      "default": "SUGAR"
    },
    {
      "type": "text",
      "id": "heading_spice",
      "label": "Right Heading",
      "default": "SPICE"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "AND ALL THINGS NICE"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Center Image (Transparent PNG)"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Order Now"
    },
    {
      "type": "range",
      "id": "image_size",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Center Image Size",
      "default": 40
    },
    {
      "type": "header",
      "content": "Desktop Layout"
    },
    {
      "type": "select",
      "id": "desktop_height",
      "label": "Desktop Height",
      "options": [
        { "value": "450px", "label": "Small" },
        { "value": "600px", "label": "Medium" },
        { "value": "800px", "label": "Large" },
        { "value": "100vh", "label": "Full Screen" }
      ],
      "default": "100vh"
    },
    {
      "type": "range",
      "id": "title_size_desktop",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "vw",
      "label": "Title Size",
      "default": 15
    },
    {
      "type": "header",
      "content": "Mobile Layout"
    },
    {
      "type": "select",
      "id": "mobile_height",
      "label": "Mobile Height",
      "options": [
        { "value": "300px", "label": "Small" },
        { "value": "450px", "label": "Medium" },
        { "value": "600px", "label": "Large" },
        { "value": "90vh", "label": "Full Screen" }
      ],
      "default": "90vh"
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "min": 10,
      "max": 50,
      "step": 1,
      "unit": "vw",
      "label": "Mobile Title Size",
      "default": 18
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "SNS - Hero Splash"
    }
  ]
}
{% endschema %}

<div class="hero-splash section-content-wrapper" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="hero-splash__split hero-splash__left bg-halftone">
    <h1 class="hero-splash__title font-heading" style="color: var(--color-brand-pink)">
      {{ section.settings.heading_sugar }}
    </h1>
  </div>

  <div class="hero-splash__center">
    {% if section.settings.image %}
      <div class="hero-splash__image-wrapper">
        <img
          src="{{ section.settings.image | image_url: width: 1000 }}"
          alt="{{ section.settings.heading_sugar }} & {{ section.settings.heading_spice }}"
          class="hero-splash__image box-pop"
          width="1000"
          height="1000"
          loading="eager"
        >
      </div>
    {% endif %}
    
    <div class="hero-splash__actions">
      <p class="hero-splash__tagline font-body text-pop-outline">{{ section.settings.tagline }}</p>
      {% if section.settings.button_link %}
        <a href="{{ section.settings.button_link }}" class="hero-splash__button font-heading box-pop box-pop--pink">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>

  <div class="hero-splash__split hero-splash__right" style="background-color: var(--color-brand-cream)">
    <h1 class="hero-splash__title font-heading" style="color: var(--color-brand-yellow)">
      {{ section.settings.heading_spice }}
    </h1>
  </div>
</div>

<style>
  .hero-splash {
    display: flex;
    height: {{ section.settings.desktop_height }};
    min-height: 400px;
    position: relative;
    overflow: hidden;
    width: 100vw;
    margin-left: calc(50% - 50vw);
    background: var(--color-brand-cream);
  }

  .hero-splash__split {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: flex 0.5s ease;
    overflow: hidden;
  }

  .hero-splash__title {
    font-size: {{ section.settings.title_size_desktop }}vw;
    line-height: 0.8;
    margin: 0;
    text-transform: uppercase;
    transform: rotate(-5deg);
    text-shadow: 10px 10px 0 var(--color-brand-black);
    -webkit-text-stroke: 4px var(--color-brand-black);
    z-index: 2;
    position: relative;
    white-space: nowrap;
  }

  .hero-splash__center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    text-align: center;
    width: {{ section.settings.image_size }}%;
    pointer-events: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .hero-splash__image-wrapper {
    width: 100%;
    max-width: 800px;
  }

  .hero-splash__image {
    width: 100%;
    max-width: 100%;
    height: auto;
    display: block;
    transform: rotate(5deg);
    border-radius: 50%;
    border: 5px solid var(--color-brand-black);
  }
  
  .hero-splash__actions {
    pointer-events: auto;
    margin-top: -30px;
    position: relative;
    z-index: 11;
  }

  .hero-splash__tagline {
    font-size: 2rem;
    margin-bottom: 2rem;
    letter-spacing: 2px;
    color: #fff;
    text-shadow: 3px 3px 0 #000;
  }

  .hero-splash__button {
    display: inline-block;
    padding: 1.5rem 4rem;
    font-size: 1.5rem;
    text-decoration: none;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .hero-splash {
      flex-direction: column;
      height: {{ section.settings.mobile_height }};
      margin-left: 0;
      width: 100%;
    }
    .hero-splash__title {
      font-size: {{ section.settings.title_size_mobile }}vw;
      white-space: normal;
      word-break: break-word;
    }
    .hero-splash__center {
      position: relative;
      width: 100%;
      height: auto;
      top: 0;
      left: 0;
      transform: none;
      padding: 2rem 1rem;
      margin-top: -15vh;
    }
    .hero-splash__split {
      flex: 0 0 35%;
    }
    .hero-splash__image-wrapper {
       width: 280px;
    }
  }
</style>
