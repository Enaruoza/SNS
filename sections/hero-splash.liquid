{% schema %}
{
  "name": "SNS - Hero Splash",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading_sugar",
      "label": "Left Heading",
      "default": "SUGAR"
    },
    {
      "type": "text",
      "id": "heading_spice",
      "label": "Right Heading",
      "default": "SPICE"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "AND ALL THINGS NICE"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Center Image (Transparent PNG)"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Order Now"
    },
    {
      "type": "select",
      "id": "desktop_height",
      "label": "Desktop Height",
      "options": [
        { "value": "450px", "label": "Small" },
        { "value": "550px", "label": "Medium" },
        { "value": "650px", "label": "Large" },
        { "value": "100vh", "label": "Full Screen" }
      ],
      "default": "650px"
    },
    {
      "type": "select",
      "id": "mobile_height",
      "label": "Mobile Height",
      "options": [
        { "value": "300px", "label": "Small" },
        { "value": "400px", "label": "Medium" },
        { "value": "500px", "label": "Large" },
        { "value": "80vh", "label": "Full Screen" }
      ],
      "default": "400px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    },
    {
       "type": "header",
       "content": "Typography"
    },
    {
      "type": "range",
      "id": "title_size_desktop",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "vw",
      "label": "Title Size",
      "default": 15
    },
      "default": 18
    }
  ],
  "presets": [
    {
      "name": "SNS - Hero Splash"
    }
  ]
}
{% endschema %}

<div class="hero-splash section-content-wrapper" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="hero-splash__split hero-splash__left bg-halftone">
    <h1 class="hero-splash__title font-heading" style="color: var(--color-brand-pink)">
      {{ section.settings.heading_sugar }}
    </h1>
  </div>

  <div class="hero-splash__center">
    {% if section.settings.image %}
      <div class="hero-splash__image-wrapper">
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.heading_sugar }} & {{ section.settings.heading_spice }}"
          class="hero-splash__image box-pop"
          width="800"
          height="800"
          loading="eager"
        >
      </div>
    {% endif %}
    
    <div class="hero-splash__actions">
      <p class="hero-splash__tagline font-body text-pop-outline">{{ section.settings.tagline }}</p>
      {% if section.settings.button_link %}
        <a href="{{ section.settings.button_link }}" class="hero-splash__button font-heading box-pop box-pop--pink">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>

  <div class="hero-splash__split hero-splash__right" style="background-color: var(--color-brand-cream)">
    <h1 class="hero-splash__title font-heading" style="color: var(--color-brand-yellow)">
      {{ section.settings.heading_spice }}
    </h1>
  </div>
</div>

<style>
  .hero-splash {
    display: flex;
    height: {{ section.settings.desktop_height }};
    position: relative;
    overflow: hidden;
    width: 100vw;
    margin-left: calc(50% - 50vw);
  }

  /* ... rest of styles ... */

  @media (max-width: 768px) {
    .hero-splash {
      flex-direction: column;
      height: {{ section.settings.mobile_height }};
      margin-left: 0;
      width: 100%;
    }

    .hero-splash__title {
      font-size: {{ section.settings.title_size_mobile }}vw;
      white-space: normal;
      word-break: break-word;
    }
    .hero-splash__center {
      position: relative;
      width: 100%;
      height: auto;
      top: 0;
      left: 0;
      transform: none;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 2rem 1rem;
      margin-top: -20vh; /* Pull up to overlap slightly for style */
    }
    .hero-splash__split {
      flex: 0 0 35%;
    }
    .hero-splash__image-wrapper {
       width: 250px;
    }
  }
</style>
