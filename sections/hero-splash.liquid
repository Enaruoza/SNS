{% schema %}
{
  "name": "SNS - Hero Splash",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading_sugar",
      "label": "Left Heading",
      "default": "SUGAR"
    },
    {
      "type": "text",
      "id": "heading_spice",
      "label": "Right Heading",
      "default": "SPICE"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "AND ALL THINGS NICE"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Center Image (Transparent PNG)"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Order Now"
    },
    {
      "type": "range",
      "id": "image_size",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Center Image Size",
      "default": 40
    },
    {
      "type": "header",
      "content": "Desktop Layout"
    },
    {
      "type": "range",
      "id": "title_size_desktop",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "vw",
      "label": "Title Size",
      "default": 15
    },
    {
      "type": "range",
      "id": "section_height_desktop",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Section Height",
      "default": 90
    },
    {
      "type": "header",
      "content": "Mobile Layout"
    },
    {
      "type": "range",
      "id": "title_size_mobile",
      "min": 10,
      "max": 50,
      "step": 1,
      "unit": "vw",
      "label": "Mobile Title Size",
      "default": 18
    },
    {
      "type": "range",
      "id": "section_height_mobile",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Mobile Section Height",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "SNS - Hero Splash"
    }
  ]
}
{% endschema %}

<div class="hero-splash section-content-wrapper">
  <div class="hero-splash__split hero-splash__left bg-halftone">
    <h1 class="hero-splash__title font-heading" style="color: var(--color-brand-pink)">
      {{ section.settings.heading_sugar }}
    </h1>
  </div>

  <div class="hero-splash__center">
    {% if section.settings.image %}
      <div class="hero-splash__image-wrapper">
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.heading_sugar }} & {{ section.settings.heading_spice }}"
          class="hero-splash__image box-pop"
          width="800"
          height="800"
          loading="eager"
        >
      </div>
    {% endif %}
    
    <div class="hero-splash__actions">
      <p class="hero-splash__tagline font-body text-pop-outline">{{ section.settings.tagline }}</p>
      {% if section.settings.button_link %}
        <a href="{{ section.settings.button_link }}" class="hero-splash__button font-heading box-pop box-pop--pink">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>

  <div class="hero-splash__split hero-splash__right" style="background-color: var(--color-brand-cream)">
    <h1 class="hero-splash__title font-heading" style="color: var(--color-brand-yellow)">
      {{ section.settings.heading_spice }}
    </h1>
  </div>
</div>

<style>
