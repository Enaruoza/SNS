{% schema %}
{
  "name": "SNS - Story Marquee",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#E63E6D"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFBF0"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "s",
      "label": "Animation Speed",
      "default": 30
    },
    {
      "type": "font_picker",
      "id": "marquee_font",
      "label": "Font",
      "default": "helvetica_n7"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 1,
      "max": 10,
      "step": 0.5,
      "unit": "rem",
      "label": "Font Size",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "enable_icons",
      "label": "Show Icons",
      "default": true
    },
    {
      "type": "range",
      "id": "icon_width",
      "min": 20,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Icon Width",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Message",
      "settings": [
        {
          "type": "text",
          "id": "message",
          "label": "Message",
          "default": "SUGAR & SPICE"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Separator"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SNS - Story Marquee",
      "blocks": [
        { "type": "text" },
        { "type": "text", "settings": { "message": "ALL THINGS NICE" } },
        { "type": "text", "settings": { "message": "LEVANTINE LOVE" } }
      ]
    }
  ]
}
{% endschema %}

{% style %}
  {{ section.settings.marquee_font | font_face: font_display: 'swap' }}
{% endstyle %}

<div class="story-marquee-wrapper" 
     style="background-color: {{ section.settings.background_color }}; 
            padding-top: {{ section.settings.padding_top }}px; 
            padding-bottom: {{ section.settings.padding_bottom }}px;
            overflow: hidden;
            width: 100vw;
            margin-left: calc(50% - 50vw);
            position: relative;
            left: 50%;
            transform: translateX(-50%);">
            
  <div class="story-marquee border-y" 
       style="border-top: 4px solid var(--color-brand-black); border-bottom: 4px solid var(--color-brand-black);
              color: {{ section.settings.text_color }};">
              
    <div class="story-marquee__content" style="animation-duration: {{ section.settings.speed }}s">
      <!-- Duplicate content 20 times to ensure smooth infinite loop on ultra-wide screens -->
      {% for i in (1..20) %}
        <div class="story-marquee__track">
          {% for block in section.blocks %}
            <span class="story-marquee__item text-pop-shadow" {{ block.shopify_attributes }}
                  style="
                    font-family: {{ section.settings.marquee_font.family }}, {{ section.settings.marquee_font.fallback_families }};
                    font-weight: {{ section.settings.marquee_font.weight }};
                    font-style: {{ section.settings.marquee_font.style }};
                    font-size: {{ section.settings.font_size }}rem;
                  ">
              {{ block.settings.message }}
              {% if section.settings.enable_icons %}
                  {% if block.settings.icon %}
                     <img src="{{ block.settings.icon | image_url: width: section.settings.icon_width }}" 
                          class="story-marquee__icon" 
                          width="{{ section.settings.icon_width }}" 
                          height="{{ section.settings.icon_width }}" 
                          loading="lazy" 
                          style="width: {{ section.settings.icon_width }}px; height: auto;">
                  {% else %}
                     <span class="story-marquee__bullet" style="color: var(--color-brand-black);">â˜…</span>
                  {% endif %}
              {% endif %}
            </span>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .story-marquee {
    white-space: nowrap;
    position: relative;
    padding: 1rem 0;
    z-index: 5;
  }

  .story-marquee__content {
    display: flex;
    animation: marquee linear infinite;
  }

  .story-marquee__track {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .story-marquee__item {
    padding: 0 2rem;
    font-weight: 800;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }
</style>
