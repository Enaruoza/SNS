{% schema %}
{
  "name": "SNS - Feature Split",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Image Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Tell your brand story here.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "SNS - Feature Split"
    }
  ]
}
{% endschema %}

<div class="feature-split section-content-wrapper page-width" style="background-color: {{ section.settings.bg_color }}">
  <div class="feature-split__grid {% if section.settings.layout == 'right' %}feature-split__grid--reverse{% endif %}">
    
    <div class="feature-split__media">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 800 | image_tag: class: 'feature-split__img box-pop', loading: 'lazy' }}
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'feature-split__img box-pop' }}
      {% endif %}
    </div>

    <div class="feature-split__content">
      <h2 class="font-heading text-pop-outline" style="font-size: 3rem; margin-bottom: 1.5rem; color: var(--color-brand-pink);">
        {{ section.settings.title }}
      </h2>
      <div class="font-body" style="font-size: 1.2rem; margin-bottom: 2rem;">
        {{ section.settings.content }}
      </div>
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="feature-split__btn font-heading box-pop box-pop--pink">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>

  </div>
</div>

<style>
  .feature-split {
    padding: 4rem 0;
  }

  .feature-split__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .feature-split__grid--reverse {
    direction: rtl;
  }
  
  .feature-split__grid--reverse .feature-split__content {
    direction: ltr; /* Reset text direction */
  }

  .feature-split__img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    border: 3px solid var(--color-brand-black);
  }

  .feature-split__btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    text-decoration: none;
    color: var(--color-brand-black);
    background: var(--color-brand-yellow);
    border: 3px solid var(--color-brand-black);
    text-transform: uppercase;
    transition: transform 0.2s;
  }
  
  .feature-split__btn:hover {
    transform: translate(-4px, -4px);
    box-shadow: 4px 4px 0 var(--color-brand-black);
  }

  @media (max-width: 768px) {
    .feature-split__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .feature-split__grid--reverse {
      direction: ltr; /* Stack normally on mobile */
    }
    .feature-split__content {
      text-align: center;
    }
  }
</style>
