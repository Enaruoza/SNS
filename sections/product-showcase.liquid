{% schema %}
{
  "name": "SNS - Product Showcase",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Available Treats"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Make Section Full Width",
      "default": false
    },
    {
      "type": "header",
      "content": "Desktop Settings"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Columns per row",
      "default": 4
    },
    {
      "type": "header",
      "content": "Mobile Settings"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Mobile Layout",
      "options": [
        { "value": "1", "label": "1 Column (Big Cards)" },
        { "value": "2", "label": "2 Columns (Compact)" }
      ],
      "default": "2"
    }
  ],
  "blocks": [
    {
      "type": "product_item",
      "name": "Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Spiced Hummus"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "Description",
          "default": "A spicy kick to a classic."
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Card Color",
          "default": "#FFFBF0"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SNS - Product Showcase"
    }
  ]
}
{% endschema %}

<div class="product-showcase-wrapper {% unless section.settings.full_width %}page-width{% endunless %} section-content-wrapper" style="padding: 4rem 0;">
  <h2 class="font-heading text-center text-pop-outline" style="font-size: 3.5rem; margin-bottom: 3rem; color: var(--color-brand-pink);">
    {{ section.settings.title }}
  </h2>

  <div class="product-grid">
    {% for block in section.blocks %}
      <div class="product-card-pop box-pop" style="background-color: {{ block.settings.bg_color }}" {{ block.shopify_attributes }}>
        <div class="product-card-pop__image-wrapper">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: width: 400 }}" class="product-card-pop__image" width="400" height="400" loading="lazy">
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'product-card-pop__image' }}
          {% endif %}
        </div>
        <div class="product-card-pop__info">
          <h3 class="font-heading" style="font-size: 1.8rem; margin: 1rem 0;">{{ block.settings.name }}</h3>
          <p class="font-body" style="font-size: 1rem; margin-bottom: 1.5rem;">{{ block.settings.desc }}</p>
          <button class="product-card-pop__btn font-heading">Add +</button>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .product-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: 2.5rem;
    padding: 0 1rem;
  }

  .product-card-pop {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    border-radius: 15px;
    align-items: center;
    text-align: center;
    transition: transform 0.3s;
    max-width: 450px;
    margin: 0 auto;
    width: 100%;
  }

  .product-card-pop:hover {
    transform: translateY(-10px) rotate(2deg);
  }

  .product-card-pop__image-wrapper {
    width: 100%;
    margin-bottom: 1.5rem;
  }

  .product-card-pop__image {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .product-card-pop__btn {
    background: var(--color-brand-black);
    color: #fff;
    border: none;
    padding: 0.8rem 2rem;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .product-card-pop__btn:hover {
    transform: scale(1.1);
    background: var(--color-brand-red);
  }

  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: 1rem;
    }
    .product-card-pop {
      padding: 1rem;
    }
    .product-card-pop__info h3 {
      font-size: 1.2rem !important;
    }
    .product-card-pop__btn {
      padding: 0.5rem 1rem;
      font-size: 1rem;
    }
  }
</style>
