<div class="page-loader">
  <div class="page-loader__content logo-animate">
    {% if settings.brand_loader_logo != blank %}
      {{ settings.brand_loader_logo | image_url: width: 600 | image_tag: class: 'loader-icon', loading: 'eager' }}
    {% else %}
      {% render 'brand-logo', class: 'loader-icon' %}
    {% endif %}
    <h2 class="font-heading" style="color: var(--color-brand-black); margin-top: 1rem;">Sugar & Spice</h2>
  </div>
</div>

<style>
  .loader-icon {
    width: {{ settings.brand_loader_width }}px;
    height: auto;
    display: block;
    margin: 0 auto;
  }
</style>
